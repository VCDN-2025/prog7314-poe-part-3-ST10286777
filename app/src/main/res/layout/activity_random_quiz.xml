<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    android:padding="24dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Random Quiz"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â† Back"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginBottom="32dp" />

    <!-- Options Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Your Challenge"
                android:textColor="#333333"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Single Random Question -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/singleQuestionBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Single Random Question"
                android:textColor="@android:color/white"
                android:backgroundTint="#4CAF50"
                android:layout_marginBottom="16dp"
                android:textSize="16sp"
                android:padding="16dp"
                app:cornerRadius="12dp" />

            <!-- Quiz of 5 Questions -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/quizOfFiveBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quiz of 5 Random Questions"
                android:textColor="@android:color/white"
                android:backgroundTint="#2196F3"
                android:textSize="16sp"
                android:padding="16dp"
                app:cornerRadius="12dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />


</LinearLayout>